{# templates/Produit/form-register.html.twig #}

{% extends "base.html.twig" %}
 {% block body %}
  {% for produit in product %}
<div class="col-lg-4 col-md-6 col-sm-12 pb-1">
    <div class="card produit-item border-0 mb-4">
        <div class="card-header produit-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="{{ asset('uploads/brochures%/') }}" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">{{ produit.nom}}</h6>
            <div class="d-flex justify-content-center">
                <h6>{{ produit.montant }}</h6><h6 class="text-muted ml-2"><del>{{ produit.montant }}</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a href="{{path("produit_show", {id: produit.id})}}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
            <a href="{{path("cart_add", {id: produit.id})}}" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
        </div>
    </div>
</div>
{% endfor %}


 {% endblock %}